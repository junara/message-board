<h3><%= @message.name %>の投稿表示</h3>

    <div class="form-horizontal" role="form">
        <%= form_for(@message) do |f| %>
        
        <div class="form-group"><!-- タブレットの時は1段組、それ以外は2段組 -->
            <label class="col-sm-2 control-label">名前:</label>
            <div class="col-sm-10">
                <%= @message.name %>
            </div>
        </div>
        <div class="form-group"><!-- タブレットの時は1段組、それ以外は2段組 -->
            <label class="col-sm-2 control-label">年齢:</label>
            <div class="col-sm-10">
                <%= @message.age %>才
            </div>
        </div>
        <div class="form-group"><!-- タブレットの時は1段組、それ以外は2段組 -->
            <label class="col-sm-2 control-label">内容:</label>
            <div class="col-sm-10">
                <%= simple_format(h(@message.body)) %>
            </div>
        </div>
        <% end %>
    </div>

