<h3>投稿</h3>
    <div class="form-horizontal" role="form">
        <%= form_for(@message) do |f| %>
            <!-- ↓エラーが起きたときの表示 -->
            <% if @message.errors.present? %>
                <div class="alert alert-danger">
                    <%= alert %>
                    <ul>
                        <% @message.errors.full_messages.each do |full_message| %>
                            <li>
                                <%= full_message %>
                            </li>
                        <% end %> 
                    </ul>
                </div>
             <% end %>
            <!-- ↑エラーが起きたときの表示 -->

        
        <div class="form-group"><!-- タブレットの時は1段組、それ以外は2段組 -->
            <label class="col-sm-2 control-label">名前:</label>
            <div class="col-sm-10">
                <%= f.text_field :name, class: 'form-control', placeholder: '名前' %> 
            </div>
        </div>
        <div class="form-group"><!-- タブレットの時は1段組、それ以外は2段組 -->
            <label class="col-sm-2 control-label">内容:</label>
            <div class="col-sm-10">
                <%= f.text_area :body, class: 'form-control', placeholder: '内容', rows: '4' %>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <%= f.submit "送信" , class: 'btn btn-primary btn-large btn-block' %>
            </div>
        </div>
        <% end %>
    </div>

