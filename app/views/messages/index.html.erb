<!-- 投稿の表示 -->
<div class="panel panel-default">
    <div class="panel-heading">
        メッセージ一覧
    </div>
    <div class="panel-body">
        <% @messages.each do |message| %>
    <div class = "row"> <!-- モバイルの時は1段組、それ以外は2段組 -->
        <div class = "col-xs-12 col-sm-1"><span class="label label-info"><%= message.name %></span></div>
        <div class = "col-xs-12 col-sm-8"><%= simple_format(h(message.body)) %></div> <!-- 改行をきちんと表示する -->
        <div class = "col-xs-12 col-sm-1"><span class="label label-info"><%= link_to "表示" , message_path(message) %></span></div>
        <div class = "col-xs-12 col-sm-1"><span class="label label-info"><%= link_to "編集" , edit_message_path(message) %></span></div>
        <div class = "col-xs-12 col-sm-1"><span class="label label-info"><%= link_to "削除" , message , method: :delete, data: {confirm: '削除してもよろしいですか？'} %></span></div>
    </div>
        <% end %>
    </div>
</div>

<h3>投稿</h3>
<% #部分テンプレートを読み込んでいる %>
<%= render 'form'  %>
